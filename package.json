{
  "private": true,
  "name": "@synthesia/crux",
  "version": "0.1.0",
  "description": "A modern frontend framework with signal-based state, shadow DOM, and custom directives",
  "scripts": {
    "dev": "vite --config playground/vite.config.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "build": "rollup -c",
    "lint": "eslint \"packages/**/*.{ts,tsx,js}\" --quiet",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,json,md}\""
  },
  "keywords": [
    "frontend",
    "framework",
    "signals",
    "shadow-dom",
    "state-management"
  ],
  "author": "synth-rabbit <josh.dean.edwards@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@8.14.2+sha1.1670a65b60df5f95e9f0cb7de46e605d9bd74fda",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/node": "^22.15.23",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "c8": "^10.1.3",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.0",
    "happy-dom": "^17.5.6",
    "prettier": "^3.5.3",
    "rollup": "^4.41.1",
    "sucrase": "^3.35.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  }
}
